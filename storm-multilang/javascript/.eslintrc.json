{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
      "inject": true,
      "module": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true
    }
}